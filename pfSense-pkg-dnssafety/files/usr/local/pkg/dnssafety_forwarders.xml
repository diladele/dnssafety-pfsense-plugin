	<fields>
		<field>
			<type>listtopic</type>
			<name>Upstream</name>
		</field>
		<field>
			<fieldname>lookup_etc_resolv_conf</fieldname>
			<fielddescr>Upstream DNS</fielddescr>
			<description>
				<![CDATA[
				Retrieve upstream DNS settings from /etc/resolve.conf automatically.
				]]></description>
			<type>checkbox</type>			
		</field>
		<field>
			<fieldname>etc_hosts_enable</fieldname>
			<fielddescr>Use Hosts File</fielddescr>
			<description>
				<![CDATA[
				Respond with entries from /etc/hosts file.
				]]></description>
			<type>checkbox</type>			
		</field>
		<field>
			<fielddescr>hosts</fielddescr>
			<fieldname>hosts</fieldname>
			<description>
				<![CDATA[
				hosts
				]]>
			</description>
			<type>input</type>
			<size>5</size>
			<default_value>/etc/hosts</default_value>			
		</field>		
		<field>
			<type>listtopic</type>
			<name>OpenDNS Family Shield</name>
		</field>
		<field>
			<fielddescr>opendns_enable</fielddescr>
