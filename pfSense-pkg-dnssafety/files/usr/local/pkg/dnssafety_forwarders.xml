			<description>
				<![CDATA[
				opendns_v4
				]]>
			</description>
			<type>input</type>
			<size>5</size>
			<default_value>208.67.222.123, 208.67.220.123</default_value>			
		</field>		
		<field>
			<fielddescr>opendns_v6</fielddescr>
			<fieldname>opendns_v6</fieldname>
